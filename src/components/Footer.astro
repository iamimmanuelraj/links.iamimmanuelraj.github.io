---
export interface Props {
	title: string;
	tagline: string;
}

const { title, tagline } = Astro.props;
---
<footer>
    <div class="mx-auto max-w-7xl py-12 px-4 sm:px-6 md:flex md:items-center md:justify-center lg:px-8">
        <div class="mt-8 md:order-1 md:mt-0">
            <p class="text-center text-base text-gray-400">
                &copy; <script type="text/JavaScript"> document.write(new Date().getFullYear()); </script> {title}. {tagline}
            </p>
            <p class="text-center text-base text-gray-400">
                Wanna make your own? <a href="https://github.com/iamimmanuelraj/links.iamimmanuelraj.github.io" class="text-indigo-600">Check This Out</a>
            </p>
        </div>
    </div>
</footer>